<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upcomingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="vertical"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgUpcoming"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/carfor" />


        <TextView
            android:id="@+id/tvOrderUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Carrefour-Maadi"
            android:textColor="@color/colorButton"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderDateAndTimeUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="14/7/2019 13:48" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Statue " />

            <TextView
                android:id="@+id/tvOrderStatusUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor Accepted Order"
                android:textColor="#2D9906" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id:" />

            <TextView
                android:id="@+id/tvOrderIDUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#288291" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>